<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        tools:context=".MainActivity">
    <TextView
            android:textColor="@color/grey_700"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:id="@+id/previousAnswer"
            tools:ignore="UnknownId"
            android:gravity="end"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/calculationText"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="678dp"
            android:layout_height="261dp"
            android:id="@+id/constraintLayout"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculationText" android:layout_marginTop="8dp">

        <Button
                android:text="@string/square_root_symbol"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button2"
                android:background="@drawable/button_background"
                android:onClick="pushSqrtButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button28"/>
        <Button
                android:text="@string/DELText"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:id="@+id/button"
                android:background="@drawable/button_background"
                android:onClick="pushDELButton"
                android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp"/>
        <Button
                android:text="@string/naturalLogText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button4"
                android:background="@drawable/button_background"
                android:onClick="pushNaturalLogButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button2"/>
        <Button
                android:text="@string/multiplyText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button5"
                android:background="@drawable/button_background"
                android:onClick="pushMultiplyButton"
                app:layout_constraintBottom_toTopOf="@+id/button25" app:layout_constraintEnd_toStartOf="@+id/button22"
        />
        <Button
                android:text="@string/xSquaredText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button7"
                android:background="@drawable/button_background"
                android:onClick="pushXSquaredButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button4"/>
        <Button
                android:text="@string/subtractionText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button8"
                android:background="@drawable/button_background"
                android:onClick="pushSubtractionButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button"/>
        <Button
                android:text="@string/nineText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button9"
                android:background="@drawable/button_background"
                android:onClick="pushNineButton"
                app:layout_constraintBottom_toTopOf="@+id/button27" app:layout_constraintEnd_toStartOf="@+id/button5"/>
        <Button
                android:text="@string/eightText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button10"
                android:background="@drawable/button_background"
                android:onClick="pushEightButton"
                app:layout_constraintEnd_toStartOf="@+id/button9"
                app:layout_constraintBottom_toTopOf="@+id/button14"/>
        <Button
                android:text="@string/additionText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button11"
                android:background="@drawable/button_background"
                android:onClick="pushAdditionButton"
                app:layout_constraintBottom_toTopOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button22"
        />
        <Button
                android:text="@string/sixText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button12"
                android:background="@drawable/button_background"
                android:onClick="pushSixButton"
                app:layout_constraintBottom_toTopOf="@+id/button24" app:layout_constraintEnd_toStartOf="@+id/button18"/>
        <Button
                android:text="@string/fiveText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button13"
                android:background="@drawable/button_background"
                android:onClick="pushFiveButton"
                app:layout_constraintBottom_toTopOf="@+id/button6" app:layout_constraintEnd_toStartOf="@+id/button12"/>
        <Button
                android:text="@string/signChangeText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button14"
                android:background="@drawable/button_background"
                android:onClick="pushSignChangeButton"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toStartOf="@+id/button27"/>
        <Button
                android:text="@string/threeText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button15"
                android:background="@drawable/button_background"
                android:onClick="pushThreeButton"
                app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintEnd_toStartOf="@+id/button19"/>
        <Button
                android:text="@string/twoText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button16"
                android:background="@drawable/button_background"
                android:onClick="pushTwoButton"
                app:layout_constraintBottom_toTopOf="@+id/button18" app:layout_constraintEnd_toStartOf="@+id/button15"/>
        <Button
                android:text="@string/xPowerYText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button17"
                android:background="@drawable/button_background"
                android:onClick="pushXPowerYButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button7"/>
        <Button
                android:text="@string/sevenText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button18"
                android:background="@drawable/button_background"
                android:onClick="pushSevenButton"
                app:layout_constraintBottom_toTopOf="@+id/button23" app:layout_constraintEnd_toStartOf="@+id/button10"/>
        <Button
                android:text="@string/fourText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button19"
                android:background="@drawable/button_background"
                android:onClick="pushFourButton"
                app:layout_constraintEnd_toStartOf="@+id/button11"
                app:layout_constraintBottom_toTopOf="@+id/button9"/>
        <Button
                android:text="@string/oneText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button20"
                android:background="@drawable/button_background"
                android:onClick="pushOneButton"
                app:layout_constraintBottom_toTopOf="@+id/button12" app:layout_constraintEnd_toStartOf="@+id/button16"/>
        <Button
                android:text="@string/parenthesesLText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button24"
                android:background="@drawable/button_background"
                android:onClick="pushParenthesesLButton"
                app:layout_constraintBottom_toTopOf="@+id/button7" app:layout_constraintEnd_toStartOf="@+id/button23"/>
        <Button
                android:text="@string/equalSignText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button25"
                android:background="@drawable/button_background"
                android:onClick="pushEqualButton"
                app:layout_constraintBottom_toTopOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/button"
        />
        <Button
                android:text="@string/parenthesesRText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button23"
                android:background="@drawable/button_background"
                android:onClick="pushParenthesesRButton"
                app:layout_constraintBottom_toTopOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button14"/>
        <Button
                android:text="@string/percentageText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button27"
                android:background="@drawable/button_background"
                android:onClick="pushPercentageButton"
                app:layout_constraintBottom_toTopOf="@+id/button28" app:layout_constraintEnd_toStartOf="@+id/button25"/>
        <Button
                android:text="@string/divisionText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button28"
                android:background="@drawable/button_background"
                android:onClick="pushDivideButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp" app:layout_constraintEnd_toStartOf="@+id/button8"
        />
        <Button
                android:text="@string/allClearText"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:id="@+id/button22"
                android:background="@drawable/button_background"
                android:onClick="pushACButton"
                app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="@string/zeroText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button26"
                android:background="@drawable/button_background"
                android:onClick="pushZeroButton"
                app:layout_constraintBottom_toTopOf="@+id/button13" app:layout_constraintEnd_toStartOf="@+id/button20"/>
        <Button
                android:text="@string/decimalText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/button6"
                android:background="@drawable/button_background"
                android:onClick="pushDecimalButton"
                app:layout_constraintEnd_toStartOf="@+id/button24"
                app:layout_constraintBottom_toTopOf="@+id/button17"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
            android:layout_width="367dp"
            android:layout_height="75dp"
            android:inputType="textPersonName"
            android:hint="@string/enterValueText"

            android:textAlignment="textEnd"
            android:textSize="35sp"
            android:textStyle="bold"

            android:textColorHint="@color/dark_purple_300"

            android:textColor="@color/black"
            android:importantForAutofill="no"
            android:ems="10"
            android:id="@+id/calculationText"
            android:gravity="end"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/previousAnswer"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>